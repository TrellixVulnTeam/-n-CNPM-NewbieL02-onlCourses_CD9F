<script>
    'use strict';

    const e = React.createElement;

    class courseBtn extends React.Component {
        constructor(props) {
            super(props);
            this.state = { clicked: false };
        }
        render() {
            if (this.state.clicked) {
                return 'Đã đăng ký.';
            }

            return e(
                'button', { onClick: () => this.setState({ clicked: true }) },
                'Đăng ký'
            );
        }
    }
    const domContainers = document.getElementsByClassName('course-btn');
    for (const domContainer of domContainers)
        ReactDOM.render(e(courseBtn), domContainer);
</script>