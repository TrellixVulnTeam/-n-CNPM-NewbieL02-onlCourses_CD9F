    
    {{!-- Course --}}
<section class="body-img">
    <h1>Các khóa học hiện có.</h1>
    <div class="courses">
    {{#each courses}}
        <div class="course">
            <img src="{{imageload this.image this.imageType}}" class="course-img" alt="">
            <h3 class="course-name">{{this.name}}</h3>
            <span class="course-author">Tác giả: {{this.author}}</span>
            <div class="course-description">
                {{!-- {{this.description}} --}}
                <a href="/course/{{this.slug}}" class="detail" style="font-size: 1.5rem;">All details!</a>
            </div>
            <div class="number">
                <span >
                    {{this.studentRes}}
                    <i class="fa fa-user-plus"></i>
                </span>
            </div>
        </div>
    {{/each}}
    </div>
    <div style="margin-top: 2rem; margin-bottom: 0;">{{{paging count page 8}}}</div>
</section>
    
<style>
    .body-img{
        margin-bottom: 0;
    }
    .courses {
        margin: 0 9%;
        display: grid;
        grid-template-columns: repeat(4, minmax(24rem, 1fr));
        gap: 2rem;
        align-items: center;
    }
    h1{
        margin: 0 9% 2rem;
        color: rgb(54, 12, 12);
        text-align: center;
    }

    .course {
        box-sizing: border-box;
        width: 100%;
        height: 35rem;
        padding: 1.5rem;
        border: 1px solid rgba(123, 231, 213, 0.6); 
        border-radius: .5rem; 
        background-color: rgba(245, 255, 255, 0.7);
    }

    .course-img {
        width: 100%;
        height: 180px;
        border: 1px solid grey;
        border-radius: 0.25rem;
    }

    .course h3 {
        font-size: 2rem;
        margin: 1rem 0.5rem .5rem 0.5rem;
    }

    .course-description {
        margin: 0.5rem;
        width: 100%;
        height: 5rem;
        font-size: 1.25rem;
    }

    .course-author {
        margin: 0.5rem;
        font-size: 1.5rem;
    }

    .course-btn {
        margin: 0.75rem 0.5rem 0.5rem 0.5rem;
        font-size: 1.5rem;
        color: royalblue;
    }

    .course-btn button {
        margin: 0 0.5rem 0 0;
        width: 8rem;
        color: #000;
        font-size: 1.5rem;
        float: right;
        border-radius: 0.5rem;
        text-transform: uppercase;
        font-weight: 400;
    }

    .course-btn button:hover {
        cursor: pointer;
        background-color: aqua;
    }
    span{
        margin: 0.5rem;
    }

    .number{
        0.5rem
        font-size: 2rem;
    }
</style>


    <script src="https://unpkg.com/react@16/umd/react.development.js" crossorigin></script>
    <script src="https://unpkg.com/react-dom@16/umd/react-dom.development.js" crossorigin></script>
<script>
    'use strict';

    const e = React.createElement;

    class courseBtn extends React.Component {
        constructor(props) {
            super(props);
            this.state = { clicked: false };
        }
        render() {
            if (this.state.clicked) {
                return 'Đã đăng ký.';
            }

            return e(
                'button', { onClick: () => this.setState({ clicked: true }) },
                'Đăng ký'
            );
        }
    }
    const domContainers = document.getElementsByClassName('course-btn');
    for (const domContainer of domContainers)
        ReactDOM.render(e(courseBtn), domContainer);
</script>