{{!--  --}}
<div id="log-img">  
    <div id="sign-page">
        {{#if message}}
            <div class="alert alert-danger" role="alert">{{message}}</div>
        {{/if}}
        <h1>Lấy Lại mật khẩu</h1>
        <form method="POST" class="form" id="form-1" action="/resetpassword">
        <div class="form-group">
            <label for="Email1">Địa chỉ Email</label>
            <input style="font-size: 1.5rem; text-transform: none !important;" type="email" name="email" value="{{resinfo.email}}" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Enter email" >
            <span class="form-message"></span>
        </div>
        <button style="font-size: 1.5rem; width: 100%;" type="submit" class="btn btn-primary " style="text-align: center;width: 100%;">Submit</button>
    </form>
    </div>
</div>
<style>
#sign-page{
    padding: 16px 24px; 
    width: 75rem; 
    margin: 9rem auto auto auto; 
    border: 4px solid rgba(123, 213, 231, 0.3); 
    border-radius: 8px;
    font-size: 1.5rem;
}
#log-img{
   background: url(/image/home-bg.jpg) top center / cover no-repeat !important;
    height: 54rem;
}

</style>
<script>

      document.addEventListener('DOMContentLoaded', function () {
        // Mong muốn của chúng ta
        Validator({
          form: '#form-1',
          formGroupSelector: '.form-group',
          errorSelector: '.form-message',
          rules: [
            Validator.isEmail('#email'),
          ],
        });
      });

</script>
