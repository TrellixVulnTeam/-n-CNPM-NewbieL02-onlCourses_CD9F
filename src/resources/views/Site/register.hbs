{{!--  --}}
<div id="log-img" style="margin-top: 6.55rem; padding-top: 3rem;">
    
    <div id="sign-page">
        <h4 style="">Đăng kí tài khoản mới</h4>
        {{#if massage}}
            <div class="alert alert-danger" role="alert">{{massage}}</div>
        {{/if}}
        <form class="form" id="form-1" method="POST" action="/user/register">
        <div class="form-group">
            <label for="email">Địa chỉ Email</label>
            <input style="font-size: 1.5rem; text-transform: none !important;" type="email" name="email" value="{{resinfo.email}}" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Enter email"
             required>
            <span class="form-message"></span>
        </div>

        <div class="form-group">
            <label for="Password">Mật khẩu</label>
            <input style="font-size: 1.5rem;"  type="password" name="password" class="form-control" id="password" placeholder="Password" required>
            <span class="form-message"></span>
        </div>

        <div class="form-group">
            <label for="confirm-password">Xác nhận Mật khẩu</label>
            <input style="font-size: 1.5rem;" type="password" name="cfpassword" class="form-control" id="confirm-password" placeholder="Password" required>
            <span class="form-message"></span>
        </div>
        <div class="form-group">
            <label for="name">Họ và Tên </label>
            <input style="font-size: 1.5rem;" type="text" name="name" value="{{resinfo.name}}" class="form-control" id="name" placeholder="Nhập tên" required>
            <span class="form-message"></span>
        </div>
        <div class="form-group">
            <div class="check-button">
                    {{#if (isMatch resinfo.gender 'male')}}
                        <input type="radio" value="male" name="gender" class="option" checked="checked">Nam
                        <input type="radio" value="female" name="gender" class="option">Nữ
                    {{/if}}
                    {{#if (isMatch resinfo.gender 'female')}}
                        <input type="radio" value="male" name="gender" class="option">Nam
                        <input type="radio" value="female" name="gender" class="option" checked="checked">Nữ
                    {{/if}}
                    {{#unless resinfo.gender}}
                        <input type="radio" id="gender" value="male" name="gender" class="option">Nam
                        <input type="radio" id="gender" value="female" name="gender" class="option">Nữ
                    {{/unless}}
            </div>
            <span class="form-message"></span>
        </div>
        <div class="form-group">
            <label for="phonenumber">Số điện thoại</label>
            <input style="font-size: 1.5rem;" type="tel" name="phonenumber" id="phone-number" class="form-control" placeholder="Nhập số điện thoại" value="{{resinfo.phonenumber}}"
             required>
            <span class="form-message"></span>
        </div>
        <button style="font-size: 1.5rem; width: 100%;" type="submit" class="btn btn-primary" id="submit-button" style="text-align: center;width: 100%;">Đăng kí</button>
        <a href="/loginpage" class='desc' style="display: block">Already have an account? <span style="color: var(--red-color); font-weight: 400">Sign in</span></a>
    </form>

    </div>
</div>
<style>
#sign-page{
    padding: 16px 24px; 
    width: 75rem; 
    margin: auto; 
    border: 4px solid rgba(123, 213, 231, 0.3); 
    border-radius: 8px;
    font-size: 1.5rem;
}
#log-img{
   background: url(/image/home-bg.jpg) top center / cover no-repeat !important;
    height: 54rem;
}
.form-message {
  font-size: 1.2rem;
  line-height: 1.6rem;
  padding: 4px 0 0;
  color: red;
}
</style>
<script>

      document.addEventListener('DOMContentLoaded', function () {
        // Mong muốn của chúng ta
        Validator({
          form: '#form-1',
          formGroupSelector: '.form-group',
          errorSelector: '.form-message',
          rules: [
            Validator.isRequired('#name', 'Vui lòng nhập tên đầy đủ của bạn'),
            Validator.isRequired('#phone-number', 'Vui lòng nhập số điện thoại của bạn'),
            Validator.isRequired('#gender', 'Vui lòng chọn giới tính của bạn'),
            Validator.minLength('#phone-number', 10),
            Validator.isEmail('#email'),
            Validator.minLength('#password', 6),
            Validator.isRequired('#confirm-password'),
            Validator.isConfirmed('#confirm-password', function () {
              return document.querySelector('#form-1 #password').value;
            }, 'Mật khẩu nhập lại không chính xác')
          ],
        });
      });

</script>