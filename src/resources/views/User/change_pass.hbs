<head><link type="text/css" rel="stylesheet" href="/css/user_infor.css" /></head>
<div id="change-pass" class="body-img" style="padding-bottom: 2rem;">
    <div class="title-change">
        <h1>Thay đổi mật khẩu</h1>
    </div>

    <div class="content">
        <form class="form-pass" id="form-1" action="/user/change_pass?_method=PUT" method="POST">
            {{#if massage}}
                <div class="alert alert-danger" role="alert">{{massage}}</div>
            {{/if}}
            <div class="col">
                <input type="password" id="old-password" placeholder="Nhập mật khẩu cũ" class="form-control" name="oldpass">
                <span class="form-message"></span>
            </div>
            <div class="col">
                <input type="password" id="new-password" placeholder="Nhập mật khẩu mới" class="form-control" name="newpass">
                <span class="form-message"></span>
            </div>
            <div class="col">
                <input type="password" id="new-password-confirmation" placeholder="Xác nhận mật khẩu mới" class="form-control" name="cfnewpass">
                <span class="form-message"></span>
            </div>
            <div class="col">
                <input type="submit" class="form-submit" value="Đổi mật khẩu">
            </div>
        </form>
    </div>
</div>

<script>

      document.addEventListener('DOMContentLoaded', function () {
        // Mong muốn của chúng ta
        Validator({
          form: '#form-1',
          formGroupSelector: '.col',
          errorSelector: '.form-message',
          rules: [
            Validator.isRequired('#old-password','Xin hãy nhập lại mật khẩu cũ'),
            Validator.minLength('#new-password', 6),
            Validator.minLength('#new-password', 6),
            Validator.isRequired('#new-password-confirmation'),
            Validator.isConfirmed('#new-password-confirmation', function () {
              return document.querySelector('#form-1 #new-password').value;
            }, 'Mật khẩu nhập lại không chính xác')
          ],
        });
      });

</script>