<head><link type="text/css" rel="stylesheet" href="/css/user_infor.css" /></head>
<div id="change-pass" class="body-img" style="padding-bottom: 2rem;">
    <div class="title-change">
        <h1>Thay đổi mật khẩu</h1>
    </div>

    <div class="content">
        <form class="form-pass" action="/user/change_pass?_method=PUT" method="POST">
            {{#if massage}}
                <div class="alert alert-danger" role="alert">{{massage}}</div>
            {{/if}}
            <div class="col">
                <input type="password" placeholder="Nhập mật khẩu cũ" class="form-control" name="oldpass">
            </div>
            <div class="col">
                <input type="password" placeholder="Nhập mật khẩu mới" class="form-control" name="newpass">
            </div>
            <div class="col">
                <input type="password" placeholder="Xác nhận mật khẩu mới" class="form-control" name="cfnewpass">
            </div>
            <div class="col">
                <input type="submit" class="form-submit" value="Đổi mật khẩu">
            </div>
        </form>
    </div>
</div>