
<div class="body" id="body-img">
  <form class="body" name="container-form" method="POST" action="/course/handle-form-action">
    <h2>
      Quản lý khóa học
      {{#if deletedCount }}
      <a href="/manager/trash">
        <img src="/image/trash.jpg" width="40" height="40" class="d-inline-block align-top" alt="">
        ({{deletedCount}})
      </a>
      {{/if}}
    </h2>
    <div class="mt-4 d-flex align-items-center">
        <div class="form-check">
          <input class="form-check-input" type="checkbox" value="" id="checkbox-all">
          <label class="form-check-label" for="checkbox-all">
            Chọn tất cả
          </label>
        </div>

        <select class="form-control form-control-sm select-all-option" name="action" required>
          <option value="">--Hành động--</option>
          <option value="delete">Xóa</option>
          <option value="add-recommed">Thêm gợi ý</option>
          <option value="remove-recommed">Xóa gợi ý</option>
        </select>

        <button class="btn btn-primary btn-sm btn-check-submit" disabled>Thực hiện</button>
    </div>
    <table class="table mt-4">
      <thead>
          <tr>
              <th scope="col">Chọn</th>
              <th scope="col">ID</th>
              <th scope="col">
                Tên môn học
              {{{sortable 'name' _sort page}}}
              </th>
              <th scope="col">
                Số lượng học sinh
              {{{sortable 'studentRes' _sort page}}}
              </th>
              <th scope="col">Được gợi ý</th>
              <th scope="col">
                Thời gian tạo
              {{{sortable 'createdAt' _sort page}}}
              </th>
              <th scope="col"></th>
          </tr>
      </thead>
      <tbody>
          {{#each courses}}
          <tr>
              <td>
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" name="courseIds[]" value="{{this._id}}">
                </div>
              </td>
              <th scope="row">{{sum @index 1}}</th>
              <td>{{this.name}}</td>
              <td>{{this.studentRes}}</td>
              <td>
                  {{#if this.recommend}}
                  <input type="checkbox" checked disabled>
                  {{else}}
                  <input type="checkbox" disabled>
                  {{/if}}
              </td>
              <td>{{this.createdAt}}</td>
              <td>
                  <a href="/course/{{this._id}}/edit" class="btn btn-primary">Sửa</a>
                  <a href="" class="btn btn-primary" data-toggle="modal" data-id="{{this._id}}" data-target="#delete-course-modal">Xóa</a>
              </td>
          </tr>
          {{else}}
          <tr>
              <td colspan="5" class="text-center">
                Bạn chưa thêm món ăn nào.
                <a href="/course/create">Thêm món ăn</a>
              </td>
          </tr>
          {{/each}}
          
      </tbody>
    </table>
    {{{paging count page}}}
  </form>
</div>

